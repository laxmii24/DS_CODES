#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node *prev, *next;
};

struct Node *head = NULL;


struct Node* createNode(int x) {
    struct Node* n = (struct Node*)malloc(sizeof(struct Node));
    n->data = x;
    n->prev = n->next = NULL;
    return n;
}


void insertEnd(int x) {
    struct Node *n = createNode(x);

    if (head == NULL) {
        head = n;
        return;
    }

    struct Node *t = head;
    while (t->next) t = t->next;

    t->next = n;
    n->prev = t;
}


void insertFront(int x) {
    struct Node *n = createNode(x);

    if (head == NULL) {
        head = n;
        return;
    }

    n->next = head;
    head->prev = n;
    head = n;
}


void deleteValue(int x) {
    struct Node *t = head;

    while (t && t->data != x)
        t = t->next;

    if (!t) {
        printf("Value not found\n");
        return;
    }

    if (t->prev) t->prev->next = t->next;
    else head = t->next;

    if (t->next) t->next->prev = t->prev;

    free(t);
}


void display() {
    struct Node *t = head;
    printf("List (Forward): ");
    while (t) {
        printf("%d ", t->data);
        t = t->next;
    }
    printf("\n");
}


void displayReverse() {
    struct Node *t = head;
    if (!t) return;

    while (t->next) t = t->next;

    printf("List (Reverse): ");
    while (t) {
        printf("%d ", t->data);
        t = t->prev;
    }
    printf("\n");
}


void reverseDLL() {
    struct Node *current = head, *temp = NULL;

    while (current) {
        temp = current->prev;
        current->prev = current->next;
        current->next = temp;
        current = current->prev; // because swapped
    }

    if (temp) head = temp->prev;
}

int main() {
    int ch, x;

  while (1) {
        printf("\n1.Insert End  2.Insert Front  3.Delete\n");
        printf("4.Display  5.Display Reverse  6.Reverse DLL  7.Exit\n");
        scanf("%d", &ch);

        switch (ch) {
            case 1:
                scanf("%d", &x);
                insertEnd(x);
                break;
            case 2:
                scanf("%d", &x);
                insertFront(x);
                break;
            case 3:
                scanf("%d", &x);
                deleteValue(x);
                break;
            case 4:
                display();
                break;
            case 5:
                displayReverse();
                break;
            case 6:
                reverseDLL();
                break;
            case 7:
                exit(0);
        }
    }
}
